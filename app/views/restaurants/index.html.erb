<br>
<h1>All of the restaurants!!!!!</h1>
<p><%= link_to "Create new restaurant", new_restaurant_path, class: "btn btn-primary" %></p>
<% @restaurants.each do |restaurant| %>
  <div class="card col-6">
    <h2><%=link_to restaurant.name, restaurant_path(restaurant) %></h2>
    <p><%=restaurant.address %></p>
    <p><%=restaurant.phone_number %></p>
    <p><%=restaurant.category %></p>
  </div>
    <%= link_to "edit", edit_restaurant_path(restaurant), class: "btn btn-primary" %>
    <%= link_to "delete",
                  restaurant_path(restaurant),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
<% end %>
